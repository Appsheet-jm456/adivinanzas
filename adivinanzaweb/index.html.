<body>
  <div class="panel">
    <h1>Acceso</h1>
    <p>Introduce el PIN para iniciar el juego</p>
    <input id="pin" type="password" placeholder="PIN" autocomplete="one-time-code" />
    <button id="go">Entrar</button>
    <div id="msg" class="msg"></div>
    <div class="note">Kinetic English</div>
  </div>

  <script>
    // 🔐 Configura aquí tu PIN
    const PIN = "2025"; // cámbialo si quieres

    const pinInput = document.getElementById('pin');
    const goBtn = document.getElementById('go');
    const msg = document.getElementById('msg');

    // Permite entrar directo con ?pin=XXXX (útil para pruebas):
    const urlPin = new URLSearchParams(location.search).get('pin');
    if (urlPin && urlPin === PIN) {
      sessionStorage.setItem('ke_gate', 'ok');
      location.href = 'juego.html';
    }

    function enter(){
      if (pinInput.value === PIN) {
        sessionStorage.setItem('ke_gate', 'ok');
        location.href = 'juego.html';
      } else {
        msg.textContent = 'PIN incorrecto';
      }
    }

    goBtn.addEventListener('click', enter);
    pinInput.addEventListener('keydown', e => { if (e.key === 'Enter') enter(); });
  </script>
